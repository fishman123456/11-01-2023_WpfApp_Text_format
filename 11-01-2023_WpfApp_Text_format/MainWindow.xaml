        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11_01_2023_WpfApp_Text_format"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel LastChildFill="False">
        <ToolBar Band="1" BandIndex="1" DockPanel.Dock="Top">
            <Button Width="50">Bold</Button>
            <Button Width="50">italic</Button>
            <Button Width="100">Underline</Button>
            <Button Width="50">Clear</Button>
        </ToolBar>
        <ToolBar Band="1" BandIndex="1" DockPanel.Dock="Top">
        <Separator/>
            <Button>Front Size:</Button>
            <List></List>
        </ToolBar>

    </DockPanel>

</Window>
