<Window x:Class="_11_01_2023_WpfApp_Text_format.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11_01_2023_WpfApp_Text_format"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel LastChildFill="False">
        <ToolBarTray  DockPanel.Dock="Top">
            <ToolBar>
                <Button >Bold</Button>
                <Button Width="50">italic</Button>
                <Button Width="100">Underline</Button>
                <Button Width="50">Clear</Button>
                </ToolBar>
                    <ToolBar>
                        <Button>Front Size:</Button>
                    <ComboBox Name="phonesList" Height="30" VerticalAlignment="Top">
                        <TextBlock>2</TextBlock>
                        <TextBlock>4</TextBlock>
                        <TextBlock>6</TextBlock>
                        <TextBlock>8</TextBlock>
                        <TextBlock>10</TextBlock>
                    </ComboBox>
                </ToolBar>
       </ToolBarTray>
    </DockPanel>
</Window>
